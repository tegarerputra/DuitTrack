{
  "name": "duittrack",
  "version": "2.0.0",
  "description": "Indonesian Fintech Personal Finance Tracker - Svelte + Vite",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && open dist/stats.html",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "performance:audit": "lighthouse http://localhost:4173 --output html --output-path dist/lighthouse-report.html",
    "performance:monitor": "node scripts/performance-monitor.js",
    "performance:full": "npm run build && npm run performance:monitor && npm run preview & sleep 5 && npm run performance:audit",
    "security:check": "npm audit --audit-level moderate"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^24.0.0",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.0",
    "chart.js": "^4.4.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^3.3.1",
    "firebase": "^10.7.1",
    "lucide-svelte": "^0.344.0",
    "svelte-french-toast": "^1.2.0",
    "svelte-motion": "^0.12.0"
  },
  "keywords": [
    "fintech",
    "personal-finance",
    "budgeting",
    "expense-tracker",
    "svelte",
    "typescript",
    "pwa",
    "indonesia",
    "rupiah"
  ],
  "author": "DuitTrack Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
